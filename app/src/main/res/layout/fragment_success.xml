<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.FragmentUserType">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">
        <ImageView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_gravity="center"
            android:src="@drawable/check01" />
        <TextView style="@style/tv_description"
            android:gravity="center"
            android:id="@+id/tv_message"
            android:layout_centerHorizontal="true"
            android:text="Your message send successfully"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
            <TextView style="@style/tv_title"
                android:gravity="center"
                android:id="@+id/tv_date"
                android:text="Appointment Date: 13/08/2020"/>
            </LinearLayout>
            <TextView style="@style/tv_header_medium"
                android:id="@+id/tv_go_to_home"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="@string/go_to_home"
                android:textColor="@color/blue"
                android:background="@drawable/border_gray"
                android:padding="@dimen/_5sdp"/>
        </LinearLayout>
    </RelativeLayout>
</layout>