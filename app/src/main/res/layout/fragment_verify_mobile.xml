<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Fragments.FragmentUserType">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true">

        <ImageView
            android:id="@+id/img_back"
            style="@style/img_back" />

        <TextView
            android:id="@+id/tv_header"
            style="@style/tv_header"
            android:layout_below="@+id/img_back"
            android:text="@string/mobile_verification" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_header"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/v_10">
                <TextView
                    style="@style/tv_title"
                    android:text="We have send OTP on 98********* \n will be apply auto fill"
                    android:layout_margin="@dimen/_10sdp"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/v_20" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <EditText
                    style="@style/et_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/v_10"
                    android:hint="*"
                    android:layout_margin="@dimen/v_5"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"/>
                    <EditText
                        style="@style/et_parent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/v_10"
                        android:hint="*"
                        android:layout_margin="@dimen/v_5"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1"/>

                    <EditText
                        style="@style/et_parent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/v_10"
                        android:hint="*"
                        android:layout_margin="@dimen/v_5"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1"/>

                    <EditText
                        style="@style/et_parent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/v_10"
                        android:hint="*"
                        android:layout_margin="@dimen/v_5"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1"/>

                </LinearLayout>


                <Button
                    android:id="@+id/btn_get_start"
                    style="@style/btn_golden"
                    android:layout_marginTop="@dimen/v_20"
                    android:text="@string/get_start"
                    android:textAllCaps="false" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/v_50" />
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</layout>